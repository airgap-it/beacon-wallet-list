#!/usr/bin/env sh

# Check if dist/ files are staged
if git diff --cached --name-only | grep -q "^dist/"; then
  echo "‚ùå Error: dist/ files should not be committed manually!"
  echo "dist/ is auto-generated by CI. Please:"
  echo "  1. Unstage dist/ files: git reset dist/"
  echo "  2. Edit src/ files instead"
  echo "  3. CI will automatically build and commit dist/"
  exit 1
fi
